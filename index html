        // Current item being edited
        let currentItem = null;

        // Generate menu items
        function generateMenu() {
            const menuGrid = document.getElementById('menuGrid');
            menuGrid.innerHTML = '';

            menuItems.forEach((item, index) => {
                const menuItem = document.createElement('div');
                menuItem.className = 'menu-item';
                
                // Check if item has a WhatsApp link
                const hasWhatsAppLink = item.whatsappLink && item.whatsappLink !== "";
                const orderButton = hasWhatsAppLink ? 
                    `<a href="${item.whatsappLink}" class="btn btn-primary" target="_blank">Pedir</a>` :
                    `<button class="btn btn-primary" onclick="openPaymentLink()">Pedir</button>`;
                
                menuItem.innerHTML = `
                    <img src="${item.image}" alt="${item.name}" class="menu-img" onerror="this.src='https://placehold.co/300x200/1f2937/cbd5e1?text=Imagen+no+disponible'">
                    <div class="menu-content">
                        <div class="menu-header">
                            <h3 class="menu-name">${item.name}</h3>
                            <div class="menu-price">$${item.price}</div>
                        </div>
                        <p class="menu-desc">${item.description}</p>
                        <div class="menu-actions">
                            ${orderButton}
                            <button class="btn btn-secondary" onclick="editPrice(${index})">Editar Precio</button>
                        </div>
                    </div>
                `;
                menuGrid.appendChild(menuItem);
            });
        }

        // Edit price function
        function editPrice(index) {
            currentItem = index;
            document.getElementById('newPrice').value = menuItems[index].price;
            document.getElementById('priceModal').style.display = 'block';
        }

        // Update price function
        function updatePrice() {
            if (currentItem !== null) {
                const newPrice = document.getElementById('newPrice').value;
                if (newPrice && !isNaN(newPrice) && newPrice > 0) {
                    menuItems[currentItem].price = parseFloat(newPrice);
                    generateMenu();
                    document.getElementById('priceModal').style.display = 'none';
                } else {
                    alert('Por favor ingrese un precio válido');
                }
            }
        }

        // Open payment link
        function openPaymentLink() {
            alert('Enlace de pago no disponible en esta demo. En un entorno real, esto abriría la pasarela de pago.');
        }

        // Play music function
        function playMusic() {
            const url = document.getElementById('youtubeUrl').value;
            if (url) {
                alert('Reproduciendo música desde: ' + url + '\n(En una implementación real, esto reproduciría el video de YouTube)');
            } else {
                alert('Por favor ingrese un enlace de YouTube válido');
            }
        }

        // Close modal
        document.querySelector('.close').onclick = function() {
            document.getElementById('priceModal').style.display = 'none';
        }

        window.onclick = function(event) {
            const modal = document.getElementById('priceModal');
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }

        // Star rating functionality
        document.addEventListener('DOMContentLoaded', function() {
            const stars = document.querySelectorAll('.star');
            let currentRating = 0;

            stars.forEach(star => {
                star.addEventListener('click', function() {
                    const rating = parseInt(this.getAttribute('data-rating'));
                    currentRating = rating;
                    updateStars();
                    
                    // Redirect to Google Maps when a star is clicked
                    window.open('https://www.google.com/maps/place/SUMAK/@-32.8949517,-68.829301,19z/data=!3m1!4b1!4m18!1m9!3m8!1s0x967e09a1dd6eefdd:0x698ad41b5908215c!2sSUMAK!8m2!3d-32.8949528!4d-68.8286573!9m1!1b1!16s%2Fg%2F11xgssdlt9!3m7!1s0x967e09a1dd6eefdd:0x698ad41b5908215c!8m2!3d-32.8949528!4d-68.8286573!9m1!1b1!16s%2Fg%2F11xgssdlt9?entry=ttu&g_ep=EgoyMDI1MTEwOS4wIKXMDSoASAFQAw%3D%3D', '_blank');
                });

                star.addEventListener('mouseenter', function() {
                    const rating = parseInt(this.getAttribute('data-rating'));
                    highlightStars(rating);
                });

                star.addEventListener('mouseleave', function() {
                    updateStars();
                });
            });

            function highlightStars(rating) {
                stars.forEach((star, index) => {
                    if (index < rating) {
                        star.classList.add('active');
                    } else {
                        star.classList.remove('active');
                    }
                });
            }

            function updateStars() {
                stars.forEach((star, index) => {
                    if (index < currentRating) {
                        star.classList.add('active');
                    } else {
                        star.classList.remove('active');
                    }
                });
            }

            // Initialize menu
            generateMenu();

            // Add animation to social icons on load
            const icons = document.querySelectorAll('.social-icons a');
            icons.forEach((icon, index) => {
                setTimeout(() => {
                    icon.style.opacity = '0';
                    icon.style.transform = 'translateY(20px)';
                    icon.style.transition = 'all 0.5s ease';
                    
                    setTimeout(() => {
                        icon.style.opacity = '1';
                        icon.style.transform = 'translateY(0)';
                    }, 100);
                }, index * 200);
            });
        });
    </script>
</body>
</html>
