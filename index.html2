        // Menu data with WhatsApp links and updated images
        let menuItems = [
            {
                name: "Sopa de Mani",
                price: 3500,
                image: "https://comidasbolivianas.org/wp-content/uploads/2020/09/%F0%9F%87%A7%F0%9F%87%B4-Sopa-de-Mani-12-7-screenshot.png",
                description: "Sopa tradicional boliviana hecha con maní, papas y verduras.",
                whatsappLink: "https://wa.me/p/25005123959173299/5492617526242"
            },
            {
                name: "Sopa de Trigo",
                price: 3500,
                image: "https://imgur.com/P2j7zsP.jpg",
                description: "Sopa nutritiva con trigo, carne y verduras frescas.",
                whatsappLink: "https://wa.me/p/24938218685848355/5492617526242"
            },
            {
                name: "Sopa de Pata",
                price: 3500,
                image: "https://imgur.com/OTcMOHx.jpg",
                description: "Sopa contundente con pata de res, papas y maíz.",
                whatsappLink: "https://wa.me/p/24938218685848355/5492617526242"
            },
            {
