        // Add event listeners for editable fields
        function addEditableFieldListeners() {
            const editableFields = document.querySelectorAll('.editable-field');
            editableFields.forEach(field => {
                field.addEventListener('click', function() {
                    makeEditable(this);
                });
            });

            const editableImages = document.querySelectorAll('.editable-img');
            editableImages.forEach(imgContainer => {
                imgContainer.addEventListener('click', function() {
                    const index = this.dataset.index;
                    const newImageUrl = prompt('Ingrese la nueva URL de la imagen:', menuItems[index].image);
                    if (newImageUrl !== null) {
                        menuItems[index].image = newImageUrl;
                        generateMenu();
                        showSaveNotification();
                    }
                });
            });
        }

        // Make field editable
        function makeEditable(element) {
            const originalContent = element.textContent;
            element.contentEditable = true;
            element.focus();
            
            // Select all text
            const range = document.createRange();
            range.selectNodeContents(element);
            const sel = window.getSelection();
            sel.removeAllRanges();
            sel.addRange(range);
            
            // Add event listeners
            element.addEventListener('blur', function() {
                saveFieldChange(this, originalContent);
            });
            
            element.addEventListener('keydown', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    this.blur();
                } else if (e.key === 'Escape') {
                    this.textContent = originalContent;
                    this.blur();
                }
            });
        }

        // Save field change
        function saveFieldChange(field, originalContent) {
            const index = field.dataset.index;
            const fieldName = field.dataset.field;
            const value = field.textContent.trim();
            
            if (value === originalContent) {
                field.contentEditable = false;
                return;
            }
            
            if (fieldName === 'price') {
                // Remove $ symbol and convert to number
                const priceValue = parseFloat(value.replace('$', ''));
                if (!isNaN(priceValue) && priceValue > 0) {
                    menuItems[index].price = priceValue;
                    field.textContent = '$' + priceValue;
                    showSaveNotification();
                } else {
                    field.textContent = '$' + menuItems[index].price;
                }
            } else if (fieldName === 'name') {
                if (value) {
                    menuItems[index].name = value;
                    showSaveNotification();
                } else {
                    field.textContent = menuItems[index].name;
                }
            } else if (fieldName === 'description') {
                if (value) {
                    menuItems[index].description = value;
                    showSaveNotification();
                } else {
                    field.textContent = menuItems[index].description;
                }
            }
            
            field.contentEditable = false;
        }

